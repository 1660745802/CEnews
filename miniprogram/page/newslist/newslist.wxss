.container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.new{
  margin: 10rpx 20rpx;
  padding: 20rpx 30rpx;
  border-radius: 15rpx;
  border: 1rpx solid #ddd;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.new_area{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 20rpx;
}
.title{
  font-size: 35rpx;
  font-weight: bolder;
  margin-bottom: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.short_content{
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.right image{
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx 0 0 10rpx;
  border-radius: 25rpx;
  overflow: hidden;
}

.tips{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.newsinfo{
  font-weight: lighter;
  font-size: 30rpx;
  color: #7e7d7d;
}

.back_top icon{
  padding: 20rpx;
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
}
